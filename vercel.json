{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/server.js" },
    { "source": "/assets/(.*)", "destination": "/client/assets/$1" },
    { "source": "/projects/(.*)", "destination": "/client/projects/$1" },
    { "source": "/resume.pdf", "destination": "/client/resume.pdf" },
    { "source": "/((?!api/|assets/|projects/|resume.pdf|.*\\..*).*)", "destination": "/client/index.html" }
  ],
  "builds": [
    {
        "src": "server/server.js",
        "use": "@vercel/node"
    },
    {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
    }
  ]
}
